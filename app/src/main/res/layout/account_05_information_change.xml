<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center|bottom"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="계정 정보 수정"
        android:fontFamily="@font/gmarketsansttfbold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/change_info_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="이름 입력하기"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            android:textColor="@android:color/white"
            />

        <EditText
            android:id="@+id/change_info_number"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:hint="전화번호 입력하기"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            android:textColor="@android:color/white"
            />

        <EditText
            android:id="@+id/change_info_pw"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:hint="비밀번호 입력하기"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            android:textColor="@android:color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    android:text="정보 수정 완료하기"
                    android:fontFamily="@font/gmarketsansttfbold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColorHint="#FFFFFF"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:text="__________________________"
                    android:layout_gravity="center"
                    android:layout_marginTop="-25dp"
                    android:layout_marginBottom="10dp"
                    />
                <ImageButton
                    android:id="@+id/change_info_save"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@android:color/black"
                    android:src="@drawable/save_info"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>