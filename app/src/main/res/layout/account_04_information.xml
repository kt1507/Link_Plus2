<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center|bottom"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="나의 계정 정보"
        android:fontFamily="@font/gmarketsansttfbold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:weightSum="7"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Name"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp"
            android:gravity="center"
            android:textColorHint="#FFFFFF"
            />
        <TextView
            android:id="@+id/info_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=""
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:gravity="center"
            android:textColorHint="#FFFFFF"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Number"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp"
            android:gravity="center"
            android:textColorHint="#FFFFFF"
            />
        <TextView
            android:id="@+id/info_number"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text=""
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:gravity="center"
            android:textColorHint="#FFFFFF"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Email Address"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp"
            android:gravity="center"
            android:textColorHint="#FFFFFF"
            />
        <TextView
            android:id="@+id/info_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=""
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:gravity="center"
            android:textColorHint="#FFFFFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/info_change_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_button2"
                android:text="개인정보 수정"
                android:fontFamily="@font/gmarketsansttfbold"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:text="______________________"
                android:layout_gravity="center"
                android:layout_marginTop="-12dp"
                />
            <Button
                android:id="@+id/main_logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button2"
                android:text="로그아웃"
                android:fontFamily="@font/gmarketsansttfbold"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>